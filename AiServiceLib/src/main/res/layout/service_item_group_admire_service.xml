<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/layout_avatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/service_bg_admire_service_selector"
        android:padding="5dp">

        <com.keepfun.aiservice.ui.view.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/service_bg_chat_default"
            android:scaleType="centerCrop"
            app:ics_riv_oval="true" />

        <ImageView
            android:id="@+id/iv_select_tip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/service_ic_member_tip_selector" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_222222"
        android:textSize="12sp" />

</LinearLayout>